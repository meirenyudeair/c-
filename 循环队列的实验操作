#include <iostream>
using namespace std;
#define MAXSIZE 100
struct Queue
{
    int *base;
    int front;
    int rear;
};

bool InitQueue(Queue &Q)//åˆ›é€ ä¸€ä¸ªé˜Ÿåˆ—
{
    Q.base=new int[MAXSIZE];
    if(!Q.base)
        return false;
    Q.front=Q.rear=0;
    return true;
}
int QueueLength(Queue Q)//æ±‚é˜Ÿåˆ—çš„é•¿
{
    return (Q.rear-Q.front+MAXSIZE)%MAXSIZE;
}
bool putQueue(Queue &Q,int &e)//å…¥é˜Ÿ
{
    if((Q.rear+1)%MAXSIZE==Q.front)
        return false;
    Q.base[Q.rear]=e;
    Q.rear=(Q.rear+1)%MAXSIZE;
    return true;
}
bool chuQueue(Queue &Q,int &e)//å‡ºé˜Ÿ
{
    if(Q.front==Q.rear)
        return false;
    e=Q.base[Q.front];
    Q.front=(Q.front+1)%MAXSIZE;
    return true;
}
bool printQueue(Queue Q)
{
    cout<<"å½“å‰é˜Ÿåˆ— ";
        if(Q.rear==Q.front)
            return false;
        while (Q.front!=Q.rear)
        {
            cout<<Q.base[Q.front];
            Q.front=(Q.front+1)%MAXSIZE;
        }
        cout<<endl;
    return true;
}
int main()
{
        Queue Q;
        int i;
       if(InitQueue(Q))
          cout <<"åˆå§‹åŒ–æˆåŠŸ"<<endl;
       else
          cout<<"åˆå§‹åŒ–å¤±è´¥"<<endl;
        while(1)
        {
            cout << "æŽ¥ä¸‹æ¥çš„æ“ä½œ: 1.å…¥é˜Ÿ   2.å‡ºé˜Ÿ   3.æ‰“å°é˜Ÿ   4.é˜Ÿçš„é•¿ 0.é€€å‡º" << endl;
            cout << "è¯·è¾“å…¥è¦æ‰§è¡Œçš„æ“ä½œï¼š";
            cin >> i;
            switch (i)
            {
            
            case 1:
                int e;
                cout << "è¯·è¾“å…¥è¦å…¥é˜Ÿçš„å€¼ï¼š";
                cin >> e;
                    if(putQueue(Q,e))
                        cout <<"å…¥é˜ŸæˆåŠŸ"<<endl;
                     else
                        cout<<"å…¥é˜Ÿå¤±è´¥"<<endl;
                    break;
            case 2:
                chuQueue(Q,e);
                break;
            case 3:
                cout << "æ‰“å°é˜Ÿåˆ—" << endl;
                printQueue(Q);
                break;
            case 4:
                int len;
                len=QueueLength(Q);
                cout<<"é•¿åº¦"<<len;
                break;
            case 0: return 1;
            default:
                    return 1;
            }
        }
}
