        return false;
    Q.front=Q.rear=0;
    return true;
}
int QueueLength(Queue Q)//æ±‚é˜Ÿåˆ—çš„é•¿
{
    return (Q.rear-Q.front+MAXSIZE)%MAXSIZE;
}
